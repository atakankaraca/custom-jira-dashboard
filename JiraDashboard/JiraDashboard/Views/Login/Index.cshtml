@model JiraDashboard.Models.DTO.Login
@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Atakan Karaca">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    @Styles.Render("~/bundles/login/css")
    <title>Index</title>
</head>
<body style="background-color:#e9ecf3">
    <div class="container login-container">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="panel panel-default">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <div class="login-head">
                                <a href="#">Jira Dashboard</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <hr>
                                <form id="login-form" action="#" method="post" role="form" style="display: block;">
                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.username, new { @id = "username", @tabindex = "1", @class = "form-control", @placeholder = "Username", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.password, new { @id = "password", @tabindex = "2", @class = "form-control", @placeholder = "Password", @type = "password", @required = "required" })
                                        </div>
                                        <div class="text-center">
                                            <span style="color:red">@ViewBag.LoginStatus</span>
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(x => x.rememberme, new { @tabindex = "3" }) <span style="font-size:12px;">Remember Me</span>
                                            </label>
                                        </div>
                                            <hr>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-lg-4 col-lg-offset-4">
                                                        <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary" value="Log In">
                                                    </div>
                                                </div>
                                            </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/login/js")

</body>

</html>
